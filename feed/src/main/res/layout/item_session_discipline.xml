<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewCoupleName"
            app:layout_constraintTop_toTopOf="@+id/textViewCoupleName">

        <TextView
                android:id="@+id/textViewCoupleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                tools:text="10 янв" />

        <TextView
                android:id="@+id/textViewCoupleTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:text="11:10" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="16dp">


        <TextView
                android:id="@+id/textViewCoupleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:textColor="#DE000000"
                android:textSize="18sp"
                tools:text="Линейная алгебра" />

        <TextView
                android:id="@+id/textViewCouplePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                tools:text="Б-407" />

        <TextView
                android:id="@+id/textViewCoupleTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.75"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                tools:text="Кудин С.Ф." />

    </LinearLayout>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="16dp"
            android:alpha="0.15"
            android:background="@color/colorBlack"
            android:layout_gravity="bottom" />

</FrameLayout>
