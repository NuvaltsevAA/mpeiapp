<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#DE000000"
              android:textSize="16sp"
              tools:text="Линейная алгебра"
              android:id="@+id/textViewPrimary"
              android:layout_marginStart="16dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="26dp"
              app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#99000000"
              tools:text="Б-407"
              android:textSize="14sp"
              app:layout_constraintStart_toStartOf="@+id/textViewPrimary"
              android:id="@+id/textViewSecondary"
              app:layout_constraintTop_toBottomOf="@+id/textViewPrimary"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#99000000"
              tools:text="практика"
              android:textAllCaps="true"
              android:textStyle="bold"
              android:textSize="10sp"
              app:layout_constraintStart_toStartOf="@+id/textViewPrimary"
              android:id="@+id/textViewOverline"
              app:layout_constraintBottom_toTopOf="@+id/textViewPrimary"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintBottom_toBottomOf="@+id/textViewPrimary"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="16dp"
                  android:gravity="center_horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="9:20"
                  android:id="@+id/textViewMeta1"
                  android:textColor="#99000000"
                  android:textSize="12sp"/>

        <ImageView android:layout_width="18dp"
                   android:layout_height="18dp"
                   android:src="@drawable/baseline_more_vert_black_18dp"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="10:50"
                  android:id="@+id/textViewMeta2"
                  android:textColor="#99000000"
                  android:textSize="12sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
