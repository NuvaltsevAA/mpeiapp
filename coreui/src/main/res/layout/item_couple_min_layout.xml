<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginTop="34dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewCoupleName"
            app:layout_constraintTop_toTopOf="@+id/textViewCoupleName">

        <TextView
                android:id="@+id/textViewCoupleTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:text="11:10" />

        <TextView
                android:id="@+id/textViewCoupleTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="12:45" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="72dp"
            android:layout_marginBottom="16dp">


        <TextView
                android:id="@+id/textViewCoupleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:textAllCaps="true"
                android:textColor="#99000000"
                android:textSize="10sp"
                android:layout_marginTop="16dp"
                tools:text="практика" />

        <TextView
                android:id="@+id/textViewCoupleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif"
                android:textColor="#DE000000"
                android:textSize="18sp"
                tools:text="Линейная алгебра" />

        <TextView
                android:id="@+id/textViewCouplePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                tools:text="Б-407" />

        <TextView
                android:id="@+id/textViewCoupleTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.75"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                tools:text="Кудин С.Ф." />

        <LinearLayout
                android:id="@+id/frameLayoutHasNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="2dp">

            <!-- NOTE ICON -->
            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_work_outline_24px"
                    android:tint="@color/colorIconsTint"
                    android:tintMode="src_in"
                    android:visibility="visible"
                    android:layout_marginRight="4dp"/>

            <!-- NOTE TEXT -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#DE000000"
                    android:textSize="14sp"
                    tools:text="Есть домашнее задание" />
        </LinearLayout>
    </LinearLayout>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="16dp"
            android:alpha="0.15"
            android:background="@color/colorBlack"
            android:layout_gravity="bottom" />

</FrameLayout>
