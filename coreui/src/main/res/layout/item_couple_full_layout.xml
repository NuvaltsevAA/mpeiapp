<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_couple_drawable"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="16dp"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:elevation="2dp"
        >

    <!--TODO TEXT ALL CAPS IN CODE -->
    <!--OVERLINE-->
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#99000000"
              tools:text="ПРЕДСТОЯЩАЯ ПАРА"
              android:textStyle="bold"
              android:textSize="10sp"
              app:layout_constraintStart_toStartOf="@+id/textViewCoupleName"
              android:id="@+id/textViewCoupleOverline"
              android:layout_marginLeft="40dp"
              app:layout_constraintTop_toTopOf="parent"
              android:visibility="visible"/>

    <!-- HEADER -->
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#DE000000"
              android:textSize="18sp"
              tools:text="Гидропневпопривод мехатронных и робототехнических устройств"
              android:id="@+id/textViewCoupleName"
              android:ellipsize="end"
              android:maxLines="2"
              android:fontFamily="sans-serif"
              android:layout_marginStart="40dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="32dp"
              app:layout_constraintTop_toBottomOf="@id/textViewCoupleOverline"/>

    <!-- CHIPS -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCoupleName"
            app:layout_constraintStart_toStartOf="@+id/textViewCoupleName"
            android:id="@+id/layoutCoupleChips"
            android:layout_marginLeft="40dp">

        <kekmech.ru.coreui.Chip
                android:id="@+id/chipCoupleLecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Лекция"
                app:accentColor="@color/colorChipLecture"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"
                android:layout_marginRight="8dp"/>

        <kekmech.ru.coreui.Chip
                android:id="@+id/chipCouplePractice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Практика"
                app:accentColor="@color/colorChipPractice"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"
                android:layout_marginRight="8dp"
                tools:visibility="gone"/>

        <kekmech.ru.coreui.Chip
                android:id="@+id/chipCoupleLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Лабораторная"
                app:accentColor="@color/colorChipLab"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"/>

        <kekmech.ru.coreui.Chip
                android:id="@+id/chipCoupleTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Зуев Ю.Ю."
                app:accentColor="@color/colorBlack"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"/>

    </LinearLayout>


    <!-- TIMELINE -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintCoupleTimeline"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layoutCoupleChips"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp">

        <!-- TODO TEXT ALL CAPS IN CODE -->
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#44000000"
                  android:text="1 ЧАС 35 МИНУТ"
                  android:textStyle="bold"
                  android:textSize="10sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:id="@+id/textViewCoupleTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                tools:text="9:20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/textViewCoupleTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                tools:text="10:55"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <!-- TODO заменить на загрузку :) -->
        <View
                android:id="@+id/timelineDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#22000000"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toEndOf="@+id/textViewCoupleTimeStart"
                app:layout_constraintEnd_toStartOf="@+id/textViewCoupleTimeEnd" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <!-- PLACE ICON -->
        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                   android:src="@drawable/ic_outline_place_black_18dp"
                   android:tintMode="src_in"
                   android:tint="@color/colorIconsTint"
                   app:layout_constraintEnd_toStartOf="@+id/textViewCouplePlace"
                   android:layout_marginStart="12dp"
                   android:layout_marginTop="10dp"
                   app:layout_constraintTop_toTopOf="@+id/textViewCouplePlace"
                   android:contentDescription="place icon" android:visibility="visible"/>

        <!-- PLACE TEXT -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#DE000000"
                tools:text="Мехатроники, робототехники, динамики и прочности машин"
                android:textSize="14sp"
                android:id="@+id/textViewCouplePlace"
                app:layout_constraintTop_toBottomOf="@id/constraintCoupleTimeline"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="40dp"
                app:layout_constraintStart_toStartOf="parent"/>
    </FrameLayout>


    <!-- DIVIDER -->
    <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#10000000"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
    />


</LinearLayout>
