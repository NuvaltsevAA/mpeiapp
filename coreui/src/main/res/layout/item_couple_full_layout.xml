<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:clipToPadding="false">

    <!--OVERLINE-->
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#99000000"
              tools:text="Предстоящая пара"
              android:textAllCaps="true"
              android:textStyle="bold"
              android:textSize="10sp"
              app:layout_constraintStart_toStartOf="@+id/textViewCoupleName"
              android:id="@+id/textViewCoupleType"
              app:layout_constraintTop_toTopOf="parent"
              android:visibility="visible"/>

    <!-- HEADER -->
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#DE000000"
              android:textSize="24sp"
              tools:text="Линейная алгебра"
              android:id="@+id/textViewCoupleName"
              android:ellipsize="end"
              android:maxLines="1"
              android:fontFamily="sans-serif"
              android:layout_marginStart="40dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="32dp"
              app:layout_constraintTop_toBottomOf="@id/textViewCoupleType"/>

    <!-- PLACE ICON -->
    <ImageView android:layout_width="18dp" android:layout_height="18dp"
               android:src="@drawable/ic_outline_place_black_18dp"
               android:tintMode="src_in"
               android:tint="#464646"
               app:layout_constraintEnd_toStartOf="@+id/textViewCouplePlace"
               android:layout_marginEnd="10dp" android:layout_marginTop="2dp"
               app:layout_constraintTop_toTopOf="@+id/textViewCouplePlace"
               android:contentDescription="place icon"/>

    <!-- PLACE TEXT -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE000000"
            tools:text="Б-407"
            android:textSize="16sp"
            android:id="@+id/textViewCouplePlace"
            app:layout_constraintTop_toBottomOf="@id/timeline"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textViewCoupleName"
            android:layout_marginLeft="0dp"
            />

    <!-- CHIPS -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCoupleName"
            app:layout_constraintStart_toStartOf="@+id/textViewCoupleName" android:id="@+id/chipd">

        <kekmech.ru.coreui.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Лекция"
                app:accentColor="@color/colorChipLecture"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"
                android:layout_marginRight="8dp"
                />

        <kekmech.ru.coreui.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Практика"
                app:accentColor="@color/colorChipPractice"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"
                android:layout_marginRight="8dp"
                />

        <kekmech.ru.coreui.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="Лабораторная"
                app:accentColor="@color/colorChipLab"
                tools:layout_editor_absoluteY="75dp"
                tools:layout_editor_absoluteX="129dp"/>

    </LinearLayout>

    <!-- TIMELINE -->
    <android.support.constraint.ConstraintLayout
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/chipd" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#33000000"
                  tools:text="1 час 35 минут"
                  android:textAllCaps="true"
                  android:textStyle="bold"
                  android:textSize="10sp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:id="@+id/textViewCoupleTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000000"
                tools:text="9:20" app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/textViewCoupleTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000000"
                tools:text="10:55"
                app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/timelineDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#11000000"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="14dp"
                app:layout_constraintStart_toEndOf="@+id/textViewCoupleTimeStart"
                app:layout_constraintEnd_toStartOf="@+id/textViewCoupleTimeEnd" android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>
    </android.support.constraint.ConstraintLayout>

    <!-- DIVIDER -->
    <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"/>


</android.support.constraint.ConstraintLayout>
