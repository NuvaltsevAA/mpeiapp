<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#DE000000"
              android:textSize="16sp"
              tools:text="Two-line item"
              android:id="@+id/textViewPrimary"
              android:layout_marginStart="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
              app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#99000000"
              tools:text="Overline"
              android:textAllCaps="true"
              android:textSize="10sp"
              app:layout_constraintStart_toStartOf="@+id/textViewPrimary"
              android:id="@+id/textViewOverline"
              app:layout_constraintBottom_toTopOf="@+id/textViewPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>
